{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "installCommand": "npm install --legacy-peer-deps",
    "buildCommand": "npm run build"
  },
  "deploy": {
    "startCommand": "npx serve -s dist -l 3000",
    "restartPolicyType": "ON_FAILURE",
    "sleepApplication": false
  }
}
